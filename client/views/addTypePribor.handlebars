
<div class="container-md mt-2">
    <div class="row">
        <div class="col">
            <form method="post">
                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Введите наименование прибора</label>
                    <input type="text" name="priborType" class="form-control" >

                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
            <table class="table">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Наименование</th>
                    <th scope="col">Кнопка</th>
                </tr>
                </thead>
                <tbody>
                {{#each type}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{name}}</td>
                        <td>
                            <form action="deleteTypePribor/{{id}}" method="POST" style="display:inline;">
                                <input type="submit" value="Удалить" />
                            </form>
                        </td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
    </div>

