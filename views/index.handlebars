<div class="container">
    <form method="post">
        <div class="row">
            <div class="col">
                <label class="form-label">Секция</label>
                <input type="number" class="form-control" id="exampleInputEmail1" name="section">
            </div>
            <div class="col">
                <label class="form-label">Этаж</label>
                <input type="number" class="form-control" id="exampleInputEmail1" name="floor">
            </div>
            <div class="col">
                <label class="form-label">Квартира</label>
                <input type="number" class="form-control" id="exampleInputEmail1" name="flat">
            </div>
        </div>
        <select name="typeMeter" class="form-select mt-2" aria-label="Default select example">
            <option selected>Выбор счётчика</option>
            <option value="Счётчик горячей воды">Счётчик горячей воды</option>
            <option value="Счётчик холодной воды">Счётчик холодной воды</option>
            <option value="Счётчик электроэнергии">Счётчик электроэнергии</option>
            <option value="Счётчик тепла">Счётчик тепла</option>
        </select>
        <div class="mb-3 mt-3">
            <div class="row">
                <div class="col-12">
                    <div class="input-group">
                        <span class="input-group-text">Номер на АСР</span>
                        <input name="numberKdl" type="number" class="form-control">
                        <input name="numberAsr" type="number" class="form-control">
                    </div>
                    <div id="emailHelp" class="form-text">Введите номер АСР(если это вода). Например номер АСР "3/16". Первое поле 3, второе 16</div>
                </div>
            </div>


            <label class="form-label">Номер счётчика</label>
            <input type="number" class="form-control" id="exampleInputEmail1" name="numberMeter">

            <!--<div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>-->
        </div>
        <div class="mb-3">
            <label class="form-label">Показания</label>
            <input type="text" class="form-control" id="exampleInputEmail1" name="sumMeter">
        </div>
        <div class="mb-3">
            <label class="form-label">Комментарий</label>
            <input type="text" class="form-control" id="exampleInputEmail1" name="comment">
        </div>
        <button type="submit" class="btn btn-primary">Добавить</button>


    </form>
    <div class="row">
        <div class="col">
            <form class="mt-2" action="/allList" method="get" target="_blank">
                <button class="btn btn-primary">Весь список</button>
            </form>
        </div>
        <div class="col">
            <form class="mt-2" action="/formList" method="get">
                <button class="btn btn-primary">Список для Excel</button>
            </form>
        </div>
    </div>
    <hr>
   <form method="get">
        <div class="row">
        
            <div class="col-3">
                <label class="form-label">Квартира</label>
                <input type="number" class="form-control" id="exampleInputEmail1" name="flat">
            </div>
            <div class="col-3">
                <button type="submit" class="btn btn-primary mt-3">Получить</button>
            </div>
        </div>

    </form>





    {{#each object}}

        <table class="table">
            <thead>
            <tr>
                <th scope="col">Секция/<br>Этаж/<br>Квартира</th>
                <th scope="col">Тип</th>
                <th scope="col">Номер/<br>Показания</th>
                <th scope="col">Comment</th>
                <th scope="col"></th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <th scope="row">{{section}}<br>{{floor}}<br>{{flat}}</th>
                <td>{{typeMeter}}<br>АСР {{numberKdl}}/{{numberAsr}}</td>
                <td>{{numberMeter}}/<br>{{sumMeter}}</td>
                <td>{{comment}}</td>
                <td>
                    <a href="/mainEditMeter/{{id}}">Ред</a>|
                    <!--<form action="deleteMainMeter/{{id}}" method="POST">
                        <input type="submit" value="Удалить" />
                    </form>-->
                </td>
            </tr>
            </tbody>
        </table>

    {{/each}}
</div>